          <!-- switch -->
          <div class="form-check form-switch" style="margin: 0 5px">
            <input style="color: #60cdc8; background-color: #2e3241" class="form-check-input change-theme" type="checkbox"
              id="flexSwitchCheckChecked" checked />
            <label class="form-check-label" for="flexSwitchCheckChecked">
            </label>
          </div>
        </div>
      </div>
    </section>

    <!-- stats -->
    <section id="stats-info">
      <div class="stats-content" style="line-height: 2;">
        <table class="table table-borderless" style="color: white">
          <thead class="column-names">
            <tr>
              <th scope="col">#</th>
              <th scope="col">Name</th>
              <th scope="col">Last</th>
              <th scope="col">Buy Price</th>
              <th scope="col">Sell Price</th>
              <th scope="col">Volume</th>
              <th scope="col">Base unit</th>
            </tr>
          </thead>
          <tbody>



            <% var index=1 ; for (var key in dataArray) { if (index>10) break;
              if (!dataArray.hasOwnProperty(key)) continue;



              var obj = dataArray[key]; %>
              <tr>
                <th scope="row">
                  <%= index %>
                </th>
                <td>
                  <%= obj['name'] %>
                </td>
                <td>₹ <%= (Math.round(obj['last'])).toLocaleString() %>
                </td>
                <td>₹ <%= (Math.round(obj['buy'])).toLocaleString() %> 
                </td>
                <td>₹ <%= (Math.round(obj['sell'])).toLocaleString() %>
                </td>
                <td>
                  <%= obj['volume'] %>
                </td>
                <td>
                  <%= obj['base_unit'].toUpperCase() %>
                </td>
              </tr>



              <% index+=1 }%>
          </tbody>
        </table>
      </div>
    </section>

    <footer style="display: block; margin-top: 60px auto; text-align : center;">
