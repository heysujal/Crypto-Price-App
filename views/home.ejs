        </div>

        <!-- connect and switch -->

        <div class="connect-switch" style="display: flex">
          <!-- circle -->
          <div style="margin: 0 15px; height: fit-content">
            <div class="outer-circle">
              <div class="inner-circle">58</div>
            </div>
          </div>

          <!-- connect to telegram -->

          <div class="connect-button">
            <button type="button" class="btn">
              <i style="color: white; background-color: #60cdc8; font-size: 1.1rem;" class="bi bi-telegram"></i>
              Connect Telegram
            </button>
